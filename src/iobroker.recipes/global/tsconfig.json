{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "node",
      "mocha"
    ],
    "sourceMap": true,
    "declaration": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.d.ts",
    "tests/**/*.d.ts"
  ],
  "files": [
    "src/index.ts"
  ]
}